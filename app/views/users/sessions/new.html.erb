<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "ui form segment userform"}) do |f| %>
  <h2>Log in</h2>
  <div class="field">
  	<%= f.label :email %>
  	<div class="ui left labeled icon input">
  		<%= f.email_field :email, autofocus: true %>
  		<i class="user icon"></i>
      	<div class="ui corner label">
        	<i class="icon asterisk"></i>
      	</div>
  	</div>
  </div>
  <div class="field">
  	<%= f.label :password %>
 	<div class="ui left labeled icon input">	
    	<%= f.password_field :password, autocomplete: "off" %>
    	<i class="lock icon"></i>
      	<div class="ui corner label">
        	<i class="icon asterisk"></i>
      	</div>
      </div>
	</div>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <%= f.submit "Log in", class: "ui blue submit button" %>
<br/>
<%= render "users/shared/links" %>
<% end %>


