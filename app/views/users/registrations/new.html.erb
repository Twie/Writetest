<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "ui form segment userform"}) do |f| %>
  <h2>Sign up</h2>
  <div class="ui error message">
   <div class="header"><%= devise_error_messages! %></div>
  </div>
	<div>
	<div class="field">
	  <div class="ui left labeled icon input"><%= f.text_field :firstname, autofocus: true, placeholder:"First Name" %>
	  	<div class="ui corner label">
        	<i class="icon asterisk"></i>
      	</div>
	  </div></div>
	  
	<div class="field">
	  <div class="ui left labeled icon input" style="margin: 5% 0% 5% 0%"><%= f.text_field :lastname, autofocus: true, placeholder:"Last Name" %>
	  	<div class="ui corner label">
        	<i class="icon asterisk"></i>
      	</div>
	</div></div>
	
	<div class="field">
	  <div class="ui left labeled icon input" style="margin: 0% 0% 5% 0%"><%= f.text_field :username, autofocus: true, placeholder:"Username" %>
	  	<div class="ui corner label">
        	<i class="icon asterisk"></i>
      	</div>
	</div></div></div>
	
	<div>  
  <div class="field">
  <div class="ui left labeled icon input" style="margin: 0% 0% 5% 0%"><%= f.email_field :email, autofocus: true, placeholder:"Email" %>
  	<i class="user icon"></i>
      	<div class="ui corner label">
        	<i class="icon asterisk"></i>
      	</div>
  </div></div>

  <div class="field">
  	 <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
    <div class="ui left labeled icon input" style="margin: 0% 0% 5% 0%"><%= f.password_field :password, autocomplete: "off", placeholder:"Password" %>
    	<i class="lock icon"></i>
      	<div class="ui corner label">
        	<i class="icon asterisk"></i>
      	</div>
    </div></div>

    <div class="ui left labeled icon input" style="margin: 0% 0% 5% 0%"><%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation" %>
    	<i class="lock icon"></i>
      	<div class="ui corner label">
        	<i class="icon asterisk"></i>
      	</div>
    </div></div>
</div>
  <div><%= f.submit "Sign up", class: "ui small blue submit button", style: "margin: 0% 0% 3% 0%" %></div>
  <%= render "users/shared/links" %>
<% end %>
