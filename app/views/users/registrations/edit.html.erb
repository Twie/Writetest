<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "ui form segment userform" }) do |f| %> <h2>Edit user</h2>
<div class="ui error message">
	<div class="header">
		<%= devise_error_messages! %>
	</div>
</div>
<div>
	<div class="field">
		<div class="ui left labeled icon input">
			<%= f.text_field :firstname, autofocus: true, placeholder:"First Name" %>
			<div class="ui corner label">
				<i class="icon asterisk"></i>
			</div>
		</div>
	</div>

	<div class="field">
		<div class="ui left labeled icon input" style="margin: 5% 0% 5% 0%">
			<%= f.text_field :lastname, autofocus: true, placeholder:"Last Name" %>
			<div class="ui corner label">
				<i class="icon asterisk"></i>
			</div>
		</div>
	</div>

	<div class="field">
		<div class="ui left labeled icon input" style="margin: 0% 0% 5% 0%">
			<%= f.text_field :username, autofocus: true, placeholder:"Username" %>
			<div class="ui corner label">
				<i class="icon asterisk"></i>
			</div>
		</div>
	</div>
</div>

<div>
	<div class="field">
		<div class="ui left labeled icon input" style="margin: 0% 0% 5% 0%">
			<%= f.email_field :email, autofocus: true, placeholder:"Email" %> <i class="user icon"></i>
			<div class="ui corner label">
				<i class="icon asterisk"></i>
			</div>
		</div>
	</div>

	<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	<div>
		Currently waiting confirmation for: <%= resource.unconfirmed_email %>
	</div>
	<% end %>
	<div class="field">
		<div class="ui left labeled icon input" style="margin: 0% 0% 5% 0%">
			<%= f.password_field :password, autocomplete: "off", placeholder:"Password" %>
			<i>(leave blank if you don't want to change it)</i>
			<br />
			<i class="lock icon"></i>
			<div class="ui corner label">
				<i class="icon asterisk"></i>
			</div>
		</div>
	</div>

	<div class="field">
		<div class="ui left labeled icon input" style="margin: 0% 0% 5% 0%">
			<%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation" %> <i class="lock icon"></i>
			<div class="ui corner label">
				<i class="icon asterisk"></i>
			</div>
		</div>
	</div>

	<div class="field">
		<div class="ui left labeled icon input" style="margin: 0% 0% 5% 0%">
			<%= f.password_field :current_password, autocomplete: "off", placeholder:"Current Password" %> <i>(we need your current password to confirm your changes)</i>
			<br />
			<i class="lock icon"></i>
			<div class="ui corner label">
				<i class="icon asterisk"></i>
			</div>
		</div>
	</div>
</div>

<div>
	<%= f.submit "Update", class: "ui small blue submit button", style: "margin: 0% 0% 3% 0%" %>
</div>

<% end %>

<div style="margin-left: 33%;">

<h3>Cancel my account</h3>

<p>
	Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "ui small red button" %>
</p>

<%= link_to "Back", :back, :class => "ui black button" %>
</div>
