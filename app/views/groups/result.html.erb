<div class="ui raised segment", style= "margin: 2% 20% 2% 20%">

	<div class="ui ribbon label blue">
		<%= @group.title %> Result
	</div>
	<h3 class="ui black block header"> <%- @group.sentences.map(&:content).each do |sentence|%>
	<%= sentence%>
	<br>
	<%end%> </h3>
	<div>
		<span>
			<div class="ui small facebook button">
			  	<%= link_to "https://www.facebook.com/dialog/feed?app_id=1459207994334269&display=popup&caption=#{@result}&link=#{request.protocol}#{request.host_with_port}#{result_group_path(@group)}&redirect_uri=#{request.protocol}#{request.host_with_port}", class:"socialbutton" do %>
				  <i class="facebook icon"></i>
				  Share
				<% end %>
  			</div>
		</span>
		<span> 
			<div class="ui small twitter button">
			  	<%= link_to "https://twitter.com/intent/tweet?text=#{twitter_text(@group)} ,Chk it out on #{request.protocol}#{request.host_with_port}#{result_group_path(@group)}", class:"socialbutton" do %>
				  <i class="twitter icon"></i>
				  Share
				<% end %>
  			</div></span>
		<span>
			<div class="ui small google plus button">
				<i class="google plus icon"></i>
				<a
				  class="g-interactivepost socialbutton"
				  data-contenturl="#{request.protocol}#{request.host_with_port}#{result_group_path(@group)}"
				  data-contentdeeplinkid="#{result_group_path(@group)}"
				  data-clientid="830393760773-plbl2hqmdtq810rn3invets0722r4lqj.apps.googleusercontent.com"
				  data-cookiepolicy="single_host_origin"
				  data-prefilltext="#{@result}"
				  data-calltoactionlabel="GO"
				  data-calltoactionurl="#{request.protocol}#{request.host_with_port}#{result_group_path(@group)}"
				  data-calltoactiondeeplinkid="#{result_group_path(@group)}">
				  Share
				</a>
			</div>
			</span>
	</div>
</div>
<script >
  window.___gcfg = {
    lang: 'zh-CN',
    parsetags: 'onload'
  };
</script>
<script src="https://apis.google.com/js/platform.js" async defer></script>
